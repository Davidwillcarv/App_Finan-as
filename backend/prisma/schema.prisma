generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  monthlyIncome Float
  payday        Int
  expenses      Expense[]
  createdAt     DateTime  @default(now())
}

model Expense {
  id        String   @id @default(uuid())
  value     Float
  category  String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
